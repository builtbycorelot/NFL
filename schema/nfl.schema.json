{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "NodeForm Language Graph",
  "type": "object",
  "properties": {
    "pack": { "type": "string" },
    "nodes": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "name": { "type": "string" },
          "type": { "type": "string" },
          "state": { "type": "object" },
          "traits": {
            "type": "array",
            "items": { "type": "string" }
          },
          "impl": { "type": "object" }
        },
        "required": ["name", "type"],
        "additionalProperties": true
      }
    },
    "edges": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "from": { "type": "string" },
          "to": { "type": "string" },
          "traits": {
            "type": "array",
            "items": { "type": "string" }
          },
          "impl": { "type": "object" }
        },
        "required": ["from", "to"],
        "additionalProperties": true
      }
    }
  },
  "required": ["pack"],
  "additionalProperties": true
}
